@model b9039646_WAD_Assignment.Models.locationForm

<h1>Add Location</h1>

<form asp-controller="Cms" asp-action="AddLocation">
    <div>
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="error"></span>
    </div>

    <div>
        <label asp-for="Description">Description</label>
        <input type="text" asp-for="Description"/>
    </div>

    <div>
        <label asp-for="Justification">Justification</label>
        <textarea asp-for="Justification"></textarea>
    </div>

    <div>
        <label asp-for="Date">Date</label>
        <input type="date" asp-for="Date" />
    </div>

    <div>
        <label asp-for="Danger">Danger</label>
        <input type="text" asp-for="Danger" />
    </div>


    <div>
        <label asp-for="Longitude">Longitude</label>
        <input type="number" asp-for="Longitude"/>
    </div>

    <div>
        <label asp-for="Latitude">Latitude</label>
        <input type="number" asp-for="Latitude"/>
    </div>

    <div>
        <label asp-for="Area">Area</label>
        <input type="number" asp-for="Area"/>
    </div>

    <div>
        <label asp-for="Category">Category</label>
        <select name="catergory" asp-for="Category">

            <option value="cultural">Cultural</option>
            <option value="natural">Natural</option>
            <option value="mixed">Mixed</option>
        </select>
    </div>

    <div>
        <label asp-for="Country">Country</label>
        <input type="text" asp-for="Country" />
    </div>

    <div>
        <label asp-for="Continent">Continent</label>
        <input type="text" asp-for="Continent" />
    </div>

    <div>
        <label asp-for="GeographicalCoordinates">Geographical Co-ordinates</label>
        <input type="number" asp-for="GeographicalCoordinates" />
        <span asp-validation-for="GeographicalCoordinates" class="error"></span>
    </div>

    <div>
        <input type="submit" value="Add" class="add" />
    </div>

</form>
