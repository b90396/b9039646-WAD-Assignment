@model b9039646_WAD_Assignment.Models.locationForm

    <head>
        <link rel="stylesheet" href="~/css/forms.css" />
        <link rel="stylesheet" href="~/css/home.css" />
    </head>

<h1 class="title">Edit Location</h1>

<div class="formContainer">
    <form asp-controller="Cms" asp-action="EditLocation" class="centerForm">

        <div class="formField">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" class="error"></span>
        </div>

        <div class="formField">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description"></textarea>
        </div>

        <div class="formField">
            <label asp-for="Justification">Justification</label>
            <textarea asp-for="Justification"></textarea>
        </div>

        <div class="formField">
            <label asp-for="Date">Date</label>
            <input type="date" asp-for="Date" />
        </div>

        <div class="formField">
            <label asp-for="Danger">Danger</label>
            <input type="text" asp-for="Danger" />
        </div>


        <div class="formField">
            <label asp-for="Longitude">Longitude</label>
            <input type="number" asp-for="Longitude" />
        </div>

        <div class="formField">
            <label asp-for="Latitude">Latitude</label>
            <input type="number" asp-for="Latitude" />
        </div>

        <div class="formField">
            <label asp-for="Area">Area</label>
            <input type="number" asp-for="Area" />
        </div>

        <div class="formField">
            <label asp-for="Category">Category</label>
            <select name="catergory" asp-for="Category">

                <option value="cultural">Cultural</option>
                <option value="natural">Natural</option>
                <option value="mixed">Mixed</option>
            </select>
        </div>

        <div class="formField">
            <label asp-for="Country">Country</label>
            <input type="text" asp-for="Country" />
        </div>

        <div class="formField">
            <label asp-for="Continent">Continent</label>
            <input type="text" asp-for="Continent" />
        </div>

        <input type="hidden" name="GeographicalCoordinates" value="@Model.GeographicalCoordinates" />



        <div class="button">
            <input type="submit" value="Update" class="edit" />
        </div>

    </form>
</div>
