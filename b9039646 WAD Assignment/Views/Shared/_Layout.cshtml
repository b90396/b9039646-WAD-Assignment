<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - b9039646_WAD_Assignment</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="/js/site.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div  class="titlebar">
            <div class="burgerMenu">
                <img id="burgMenu" onclick="dropDown()" src="/images/burgerMenu.png" width="42" height="42" />
            </div>
            <div class="unescoTitle">
                UNESCO Sites
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="signIn">
                    Welcome, @User.Identity.Name
                    <form asp-controller="Authentication" asp-action="SignOut" method="post">
                        <button type="submit" class="delete">Sign Out</button>
                    </form>
                    
                </div>
            }
            else
            {   <div class="signIn"><a asp-controller="Authentication" asp-action="SignIn">Sign in</a></div> }

        </div>

        <div class="navbar" id="navbar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="AllLocations">All Locations</a>
            <a asp-controller="Home" asp-action="FavouriteLocationsPage">My Locations</a>
            @if (User.Identity.IsAuthenticated) {
                <a asp-controller="CMS" asp-action="Index">Update Locations</a> 
                <a asp-controller="Authentication" asp-action="ChangePassword">Change Password</a>
                }

</div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - b9039646_WAD_Assignment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
