@model SignIn;

<h2>Eneter details and New Password</h2>
<section>
    <form asp-controller="Authentication" asp-action="ChangePassword" method="post">
        <div>
            <label>Username</label>
            <input type="text" asp-for="UserName" />
        </div>
        <div>
            <label>Password</label>
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <label>New Password</label>
            <input type="password" asp-for="NewPassword" />
        </div>
        <div>
            <label asp-for="RememberMe"></label>
            <input type="checkbox" asp-for="RememberMe" />
        </div>
        <div>
            <button type="submit" class="add">Change Password</button>
        </div>
        <div asp-validation-summary="All" class="message"></div>


    </form>
</section>

